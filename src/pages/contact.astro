---
import BorderedTitle from "../components/BorderedTitle.astro";
import Layout from "../layouts/Layout.astro";

---

<Layout>
    <section class="section-sm">
        <div class="container">
            <div class="columns is-multiline">
                <div class="column is-12">
                    <BorderedTitle title="Talk To Me Anytime :)" />
                </div>

                <div class="column md-6">
                    <div class="content mb-5">
                        <h1 id="ask-us-anything-br-or-just-say-hi">Ask Me Anything <br> Or just Say Hi,</h1>
                        <p>Rather than just filling out a form, Sleeknote also offers help to the user
                            <br>with links directing them to find additional information or take popular actions.</p>
                        <h4 class="mt-6">Hate Forms? Write Us Email</h4>
                        <p><i class="ti-email mr-2 text-primary"></i><a href="mailto:georgia.young@example.com">georgia.young@example.com</a>
                        </p>
                    </div>
                </div>

                <div class="column md-6">
                    <form method="POST" action="#">
                        <div class="field">
                            <label class="label" for="name">Your Name (Required)</label>
                            <input type="text" name="name" id="name" class="input" required>
                        </div>
                        <div class="field">
                            <label class="label" for="email">Your Email Address (Required)</label>
                            <input type="email" name="email" id="email" class="input" required>
                        </div>
                        <div class="field">
                            <label class="label" for="message">Your Message Here</label>
                            <textarea name="message" id="message" class="input"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Send Now</button>
                    </form>
                </div>

            </div>
        </div>
    </section>
</Layout>